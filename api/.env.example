# Atomicbase API Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# Server Configuration
# =============================================================================

# HTTP server port
PORT=:8080

# Request timeout in seconds (default: 30)
ATOMICBASE_REQUEST_TIMEOUT=30

# =============================================================================
# Database Configuration
# =============================================================================

# Path to primary SQLite database file
DB_PATH=atomicdata/primary.db

# Directory for storing database files
DATA_DIR=atomicdata

# =============================================================================
# Authentication
# =============================================================================

# API key for authentication (leave empty to disable auth)
ATOMICBASE_API_KEY=

# =============================================================================
# CORS Configuration
# =============================================================================

# Comma-separated list of allowed origins (empty = none, "*" = all)
ATOMICBASE_CORS_ORIGINS=*

# =============================================================================
# Query Limits
# =============================================================================

# Maximum nesting depth for queries (default: 7)
ATOMICBASE_MAX_QUERY_DEPTH=7

# Maximum rows per query (default: 1000, 0 = unlimited)
ATOMICBASE_MAX_QUERY_LIMIT=1000

# Default limit when not specified (default: 100, 0 = unlimited)
ATOMICBASE_DEFAULT_LIMIT=100

# =============================================================================
# Turso Configuration (Multi-tenant external databases)
# =============================================================================

# Turso organization name (leave empty for local SQLite only)
TURSO_ORGANIZATION=

# Turso API key for management operations
TURSO_API_KEY=

# Turso group name (default: "default")
TURSO_GROUP=default

# Auth token for the Turso group (required when TURSO_ORGANIZATION is set)
TURSO_GROUP_AUTH_TOKEN=

# =============================================================================
# Activity Logging
# =============================================================================

# Enable activity logging (true/false)
ATOMICBASE_ACTIVITY_LOG_ENABLED=false

# Path to activity log database
ATOMICBASE_ACTIVITY_LOG_PATH=atomicdata/logs.db

# Days to retain logs (0 = forever, default: 30)
ATOMICBASE_ACTIVITY_LOG_RETENTION=30
